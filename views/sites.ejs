<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head') %>

    <title>PasswordKeeper - Home </title>
  </head>

  <body>
    <header>
      <nav>
        <div>
          LOGO
        </div>

        <div class='dropdown'>
          <button>
            Categories (icon)
          </button>
          <div class='dropdown-content'>
            <a href ='#'> Cat1</a>
            <a href ='#'> Cat2</a>
            <a href ='#'> Cat3</a>
          </div>
        </div>

        <div class='nav-right'>
          <div>Favourites Icon</div>
          <div>User_Email(tempVar)</div>
          <div>
            <form method="POST" action="/logout">
              <button type="submit">Log Out</button>
            </form>
          </div>
        </div>
      </nav>

    </header>

    <main>
      <h1> Category Name </h1>

  <% for (const site in sites) { %>

          <div class='site'>
            <img src="<%= sites[site].image_url %>" alt="site logo image" />
            <%= sites[site].name %>
            <%= sites[site].login_url %>


            <a href="/organization/sites/<%= sites[site].name %>"><button class="btn btn-info" >Update</button></a>

            <form method="POST" action="/organization/sites/<%= sites[site].name %>/delete"><input type="submit" class="btn btn-danger" value="Delete"></form>

          </div>

  <% } %>

      <h2> Add New Site </h2>
      <form method="POST" action="/organization/sites">
        <label for="newsite">Site name: </label>
          <input class="form-control" type="text" name="name" placeholder="http://" style="width: 300px; margin: 1em">
        <label for="username">username: </label>
          <input class="form-control" type="text" name="username" placeholder="Jane Doe"  style="width: 300px; margin: 1em">
        <label for="email">email: </label>
          <input class="form-control" type="text" name="email" placeholder="abc@example.com"  style="width: 300px; margin: 1em">
        <label for="password">password: </label>
          <input class="form-control" type="password" name="password" style="width: 300px; margin: 1em">
        <label for="category">category: </label>
          <input class="form-control" type="text" name="category" style="width: 300px; margin: 1em">
        <button type="submit">Add Site</button>
      </form>

    </main>


    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </body>
</html>
