<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head') %>

    <title>PasswordKeeper - Home </title>
  </head>

  <body>
    <header>
      <nav>
        <div>
          LOGO
        </div>

        <div class='dropdown'>
          <button>
            Categories (icon)
          </button>
          <div class='dropdown-content'>
            <a href ='#'> Cat1</a>
            <a href ='#'> Cat2</a>
            <a href ='#'> Cat3</a>
          </div>
        </div>

        <div class='nav-right'>
          <div>Favourites Icon</div>
          <div>User_Email(tempVar)</div> 
          <div>
            <form method="POST" action="/logout">
              <button type="submit">Log Out</button>  
            </form>
          </div>
        </div>
      </nav>
      
    </header>

    <main>
      <h1> Category Name </h1>

  <% for (const site in sites) { %>
      <form method="GET" action="/sites/:id">
        <button type="submit">
          <div class='site'>
            <img src="<%= sites[site].image_url %>" alt="site logo image" />
            <%= sites[site].name %>
            <%= sites[site].login_url %>
          </div>
        </button>
      </form>
  <% } %>

    </main>


    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </body>
</html>
